{
  "$ref": "#/definitions/ToolProfile",
  "definitions": {
    "ToolProfile": {
      "type": "object",
      "properties": {
        "tool_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notable_strengths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "known_limitations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "output_types": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "integrations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": [
            "string",
            "null"
          ]
        },
        "maturity_score": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "popularity_score": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "last_updated": {
          "type": "string",
          "format": "date-time"
        },
        "schema_version": {
          "type": "string"
        },
        "requires_review": {
          "type": "boolean"
        },
        "source_url": {
          "type": "string",
          "format": "uri"
        },
        "source_description": {
          "type": "string"
        },
        "scraping_failed": {
          "type": "boolean"
        },
        "established": {
          "type": "string"
        },
        "default_use_case": {
          "type": "string"
        },
        "llm_backends": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "reviewed_at": {
          "type": "string",
          "format": "date-time"
        },
        "reviewed_by": {
          "type": "string"
        },
        "rejected_reason": {
          "type": "string"
        }
      },
      "required": [
        "tool_id",
        "name",
        "description",
        "category",
        "last_updated",
        "schema_version"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}