{
  "name": "altstackfast-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "vercel-build": "npx turbo run build && ls -R packages/app && mkdir public && cp -r packages/app/dist/* public/",
    "dev": "npm run dev --workspace=@altstackfast/app",
    "dev:api": "npm run dev --workspace=@altstackfast/api",
    "dev:worker": "npm run dev --workspace=@altstackfast/worker"
  },
  "dependencies": {
    "zod": "^3.22.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.9.0"
  },
  "devDependencies": {
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  }
}