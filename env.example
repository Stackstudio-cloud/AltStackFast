# Server Configuration
PORT=8080
NODE_ENV=development

# Google Cloud / Firestore Configuration
# Set this to your Google Cloud service account key file path
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/service-account-key.json

# Firebase Configuration (for future use)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# API Keys (for future use)
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# JWT Secret for Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here

# QStash Configuration (Upstash)
QSTASH_URL=https://qstash.upstash.io/v2/publish
QSTASH_TOKEN=your_qstash_token_here
WORKER_URL=http://localhost:8081/analyze
WORKER_PORT=8081

# Redis Configuration (legacy - no longer used)
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token 