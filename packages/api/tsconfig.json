{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "composite": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@stackfast/schemas": ["../schemas/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"],
  "references": [
    { "path": "../schemas" }
  ]
}
